<body>
    <div class="container2">
        <div class="content">
            <canvas id="universe"></canvas>
        </div>
    </div>

    <div class="title">
        <h3 class="STARDUST1">ATVNCG</h3>
        <h1 class="STARDUST2">GAICON &amp; BCN</h1>
        <h3 class="STARDUST3">CAM ON VI <strong>❤</strong> DA GAP GO</h3>
        <!-- Thay ảnh bằng URL online hoặc xóa dòng này -->
        <div class="png" style="background: linear-gradient(45deg, #ff6b6b, #ff8e8e); width: 300px; height: 200px; border-radius: 15px; display: flex; align-items: center; justify-content: center; color: white; font-size: 18px;">
            Ảnh sẽ hiển thị ở đây
        </div>
        <canvas id="pinkboard"></canvas>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script>
        // JavaScript chính - thay thế main.js, particle.js, universe.js
        $(document).ready(function() {
            // Tạo hiệu ứng sao
            createUniverse();
            
            // Tạo hiệu ứng trái tim
            createHearts();
            
            // Hiệu ứng chữ
            animateText();
        });

        function createUniverse() {
            const canvas = document.getElementById('universe');
            const ctx = canvas.getContext('2d');
            
            // Set canvas size
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            
            const stars = [];
            const starCount = 200;
            
            // Tạo sao
            for (let i = 0; i < starCount; i++) {
                stars.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * canvas.height,
                    radius: Math.random() * 1.5,
                    speed: Math.random() * 0.5,
                    opacity: Math.random() * 0.8 + 0.2
                });
            }
            
            function animate() {
                ctx.fillStyle = 'rgba(0, 0, 0, 0.1)';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                
                stars.forEach(star => {
                    ctx.beginPath();
                    ctx.arc(star.x, star.y, star.radius, 0, Math.PI * 2);
                    ctx.fillStyle = rgba(255, 255, 255, ${star.opacity});
                    ctx.fill();
                    
                    star.y += star.speed;
                    if (star.y > canvas.height) {
                        star.y = 0;
                        star.x = Math.random() * canvas.width;
                    }
                    
                    // Hiệu ứng nhấp nháy
                    star.opacity = 0.2 + Math.abs(Math.sin(Date.now() * 0.001 + star.x)) * 0.6;
                });
                
                requestAnimationFrame(animate);
            }
            
            animate();
            
            // Resize canvas khi window thay đổi
            window.addEventListener('resize', function() {
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
            });
        }

        function createHearts() {
            const canvas = document.getElementById('pinkboard');
            const ctx = canvas.getContext('2d');
            
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            
            const hearts = [];
            const heartColors = ['#ff6b6b', '#ff8e8e', '#ff9ff3', '#f368e0'];
            
            function createHeart() {
                hearts.push({
                    x: Math.random() * canvas.width,
                    y: canvas.height + 50,
                    size: Math.random() * 15 + 5,
                    speed: Math.random() * 2 + 1,
                    color: heartColors[Math.floor(Math.random() * heartColors.length)],
                    opacity: Math.random() * 0.5 + 0.3
                });
            }
            
            function drawHeart(x, y, size, color, opacity) {
                ctx.save();
                ctx.globalAlpha = opacity;
                ctx.fillStyle = color;
                ctx.beginPath();
                
                // Vẽ hình trái tim đơn giản
                ctx.moveTo(x, y);
                ctx.bezierCurveTo(x, y - size/2, x - size, y - size, x - size, y);
                ctx.bezierCurveTo(x - size, y + size/2, x, y + size, x, y + size);
                ctx.bezierCurveTo(x, y + size, x + size, y + size/2, x + size, y);
                ctx.bezierCurveTo(x + size, y - size, x, y - size/2, x, y);
                
                ctx.fill();
                ctx.restore();
            }
            
            function animateHearts() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                // Tạo trái tim mới
                if (Math.random() < 0.05) {
                    createHeart();
                }
                
                // Vẽ và di chuyển trái tim
                hearts.forEach((heart, index) => {
                    drawHeart(heart.x, heart.y, heart.size, heart.color, heart.opacity);
                    heart.y -= heart.speed;
                    heart.opacity -= 0.005;
                    
                    // Xóa trái tim khi ra khỏi màn hình hoặc mờ
                    if (heart.y < -50 || heart.opacity <= 0) {
                        hearts.splice(index, 1);
                    }
                });
                
                requestAnimationFrame(animateHearts);
            }
            
            animateHearts();
            
            window.addEventListener('resize', function() {
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
            });
        }

        function animateText() {
            $('.STARDUST1, .STARDUST2, .STARDUST3').each(function(index) {
                $(this).css({
                    'opacity': '0',
                    'transform': 'translateY(50px)'
                }).delay(index * 500).animate({
                    'opacity': '1',
                    'transform': 'translateY(0)'
                }, 1000);
            });
        }
    </script>
</body>
